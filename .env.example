# ===========================================
# ARAVIEL ENVIRONMENT CONFIGURATION
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control

# ===========================================
# GENERAL CONFIGURATION
# ===========================================

# Application URL (used for API calls and redirects)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment: development | staging | production
NEXT_PUBLIC_ENV=development

# ===========================================
# AI MODEL API KEYS (Optional - for future API integration)
# ===========================================

# Claude/Anthropic API Key
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI API Key (for ChatGPT)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Google AI API Key (for Gemini)
# Get your key at: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=

# Perplexity API Key
# Get your key at: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable web search feature
NEXT_PUBLIC_ENABLE_WEB_SEARCH=false

# Enable/disable file attachments
NEXT_PUBLIC_ENABLE_FILE_ATTACHMENTS=true

# Maximum file upload size in MB
NEXT_PUBLIC_MAX_FILE_SIZE_MB=10

# Maximum number of attachments per message
NEXT_PUBLIC_MAX_ATTACHMENTS=10

# ===========================================
# ANALYTICS & MONITORING (Optional)
# ===========================================

# Vercel Analytics
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# ===========================================
# SECURITY
# ===========================================

# API route secret (for securing internal API routes)
API_SECRET=your-secret-key-here

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS=60
